    "description": "MeTools plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/me-tools",
    "type": "cakephp-plugin",
    "license": "AGPL",
	"authors": [{
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
    }],
	"require": {
        "php": ">=5.4.16",
		"ext-imagick": "*",
		"ext-mcrypt": "*",
		"michelf/php-markdown": "1.*",
        "components/jquery": "2.1.*",
		"fortawesome/font-awesome": "4.*",
		"twbs/bootstrap": "3.*",
		"eonasdan/bootstrap-datetimepicker": "4.*"
    },
	"config": {
        "component-dir": "vendor/components"
