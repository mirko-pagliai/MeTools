{
    "name": "mirko-pagliai/me-tools",
    "description": "MeTools plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/me-tools",
    "type": "cakephp-plugin",
    "license": "AGPL",
	"authors": [{
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
    }],
	"require": {
        "php": ">=5.4.16",
        "cakephp/cakephp": "3.1.*",
		"ext-imagick": "*",
		"ext-mcrypt": "*",
		"michelf/php-markdown": "1.*",
        "cakephp/debug_kit": "3.2.*",
        "cakephp/bake": "1.1.*",
		"components/jquery": "2.*"
    },
	"extra": {
		"installer-paths": {
			"app/Plugin/jquery": ["components/jquery"]
		}
	},
    "autoload": {
		"psr-4": {
			"MeTools\\": "src"
		}
	},
    "scripts": {
        "post-package-install": "MeTools\\Console\\Installer::postInstall"
    }
}