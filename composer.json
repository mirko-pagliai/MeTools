{
    "name": "mirko-pagliai/me-tools",
    "description": "MeTools plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/me-tools",
    "type": "cakephp-plugin",
    "license": "MIT",
    "authors": [{
        "name": "Mirko Pagliai",
        "email": "mirko.pagliai@gmail.com"
    }],
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": "^3.6",
        "mirko-pagliai/cakephp-assets": "^1.3",
        "mirko-pagliai/php-tools": "^1.1"
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "^3.0",
        "phpunit/phpunit": "^5.7|^6.0"
    },
    "suggest": {
        "components/jquery": "To use jQuery, the JavaScript library",
        "eonasdan/bootstrap-datetimepicker": "To create Bootstrap's datetime pickers",
        "newerton/fancy-box": "To show photos with fancybox",
        "npm-asset/fortawesome--fontawesome-free": "To use Font Awesome's icons",
        "twbs/bootstrap": "To use Bootstrap, the worldâ€™s most popular framework for building responsive, mobile-first sites"
    },
    "autoload": {
        "psr-4": {
            "MeTools\\": "src"
        },
        "files": [
            "src/Core/global_functions.php",
            "src/Core/request_detectors.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/test_app/TestApp/",
            "Cake\\Test\\": "vendor/cakephp/cakephp/tests",
            "MeTools\\Test\\": "tests",
            "TestPlugin\\": "tests/test_app/Plugin/TestPlugin/src",
            "AnotherTestPlugin\\": "tests/test_app/Plugin/AnotherTestPlugin/src"
        }
    }
}
