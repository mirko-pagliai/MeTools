{
    "name": "mirko-pagliai/me-tools",
    "description": "MeTools plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/me-tools",
    "type": "cakephp-plugin",
    "license": "AGPL",
    "authors": [{
        "name": "Mirko Pagliai",
        "email": "mirko.pagliai@gmail.com"
    }],
    "require": {
        "php": ">=5.5.9",
        "cakephp/cakephp": "3.3.*",
        "ext-mcrypt": "*",
        "components/jquery": "2.*",
        "fortawesome/font-awesome": "4.*"
    },
    "autoload": {
        "psr-4": {
            "MeTools\\": "src"
        },
        "files": [
            "src/Core/global_functions.php",
            "src/Core/html_functions.php",
            "src/Core/request_detectors.php",
            "vendor/Recaptcha/recaptchalib.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "MeTools\\Test\\": "tests",
            "TestPlugin\\": "tests/test_app/Plugin/TestPlugin/src",
            "AnotherTestPlugin\\": "tests/test_app/Plugin/AnotherTestPlugin/src"
        }
    },
    "require-dev": {
        "cakephp/cakephp-codesniffer": "2.*"
    }
}
