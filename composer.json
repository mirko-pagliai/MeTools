{
    "name": "mirko-pagliai/me-tools",
    "description": "MeTools plugin for CakePHP",
    "homepage": "https://github.com/mirko-pagliai/me-tools",
    "type": "cakephp-plugin",
    "license": "AGPL",
	"authors": [{
            "name": "Mirko Pagliai",
            "email": "mirko.pagliai@gmail.com"
    }],
	"require": {
        "cakephp/cakephp": "~3.0",
        "components/jquery": "dev-master",
		"ext-imagick": "*",
		"ext-mcrypt": "*",
		"michelf/php-markdown": "1.*",
        "moment/moment": "dev-master"
    },
    "autoload": {
		"psr-4": {
			"MeTools\\": "src"
		}
	},
    "scripts": {
        "post-package-install": "MeTools\\Console\\Installer::postInstall",
        "post-autoload-dump": [
			"ln -s vendor/components/jquery/jquery.min.js webroot/js/",
			"ln -s vendor/moment/moment/min/moment-with-locales.min.js webroot/js/"
		]
    }
}